Config { font = "xft:Dina-8"
       , bgColor = "grey2"
       , fgColor = "grey50"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Network "eth0" ["-L","0","-H","100","--normal","blue","--high","red"] 50
					, Run Cpu ["-L","3","-H","50","--high","#f0c040"] 50
                    , Run Memory ["-t","Mem: <usedratio>%"] 50
                    , Run Com "cat /proc/loadavg | cut -d ' ' -f 1-3 " [] "loadavg" 50
                    , Run Com "shellrun stemp" [] "Thermal" 100
                    , Run Com "date +'%b %d %H:%M'" [] "mdate" 60
                    , Run Com  "~/bin/mpdStats" [] "mpd" 10
                    , Run Com  "~/bin/downloadStats" [] "download" 200
                    , Run Com "~/bin/battery_mon" [] "battery" 200
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%}{<fc=cyan>%mpd%</fc> ~ <fc=pink>%download% </fc><fc=red>%battery%</fc><fc=darkgray>%loadavg%</fc> / %eth0% / %cpu% | %memory% | <fc=darkgray>%mdate%</fc> ~> <fc=gray>%Thermal%</fc>"
       }
